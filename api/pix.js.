export default function handler(req, res) {
    const { method } = req;
    const cpfDono = "382.630.078-52";

    if (method === 'POST') {
        // O C6 Bank envia os dados aqui
        const confirmacao = req.body;
        console.log("Pagamento detectado para CPF: " + cpfDono);
        return res.status(200).json({ status: "success", cpf: cpfDono });
    }

    res.status(200).send("Servidor de Pagamento LUXTIME Ativo.");
}
